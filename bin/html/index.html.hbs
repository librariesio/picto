<!doctype html>
<html>
  <head>
    <title>Pictogram - a libraries.io project</title>
    <link rel="stylesheet" href="pictogram.css" charset="utf-8">
    <style>
    body{
      background:white;
      font-family: "Source Sans Pro", "Helvetica Neue", Helvetica, Arial, sans-serif;
      margin:0;
    }
    header{
      display:block;
      background: #222;
      border-image: linear-gradient(90deg, #1abc9c 15%, #2ecc71 15%, #2ecc71 12%, #3498db 12%, #3498db 32%, #9b59b6 32%, #9b59b6 35%, #34495e 35%, #34495e 55%, #f1c40f 55%, #f1c40f 59%, #e67e22 59%, #e67e22 63%, #e74c3c 63%, #e74c3c 82%, #ecf0f1 82%, #ecf0f1 92%, #95a5a6 92%);
      border-image-slice: 1;
      border-top:0 none;
      border-left: 0 none;
      border-right: 0 none;
    }
    h1{
      color: #eee;
      font-size: 18px;
      font-weight:200;
      letter-spacing:1px;
      padding: 8px 0 8px 1em;
      margin:0;

    }
    .pictograms{
      text-align:center;
    }
    .pictogram {
      display:inline-block;
      width:100px;
      height:100px;
      margin:40px;
    }
    </style>
  </head>
  <body>
    <header>
      <h1>Pictogram</h1>
    </header>
    <div class="pictograms">
    {{#each this}}
      <div title="{{name}}" class="pictogram pictogram-{{name}}"></div>
    {{/each}}
    </div>
  </body>
</html>
